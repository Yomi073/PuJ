                        <TableColumn fx:id="lengthTblCol" minWidth="20.0" prefWidth="175.0" text="Lenght" />
                  <TableColumn fx:id="piecesTblCol" minWidth="20.0" prefWidth="175.0" text="Pieces" />
                        <TableColumn fx:id="purchasePriceTblCol" minWidth="20.0" prefWidth="175.0" text="Purchase Price" />
                        <TableColumn fx:id="sellingPriceTblCol" minWidth="20.0" prefWidth="175.0" text="Selling Price" />
                    </columns>
